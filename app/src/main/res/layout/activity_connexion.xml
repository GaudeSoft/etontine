<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5edf0"
    tools:context=".Connexion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="329dp"
        android:layout_height="495dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bord_arrondi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.536"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnConnexion"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="32dp"
        android:text="Connexion"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"

        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <Button
        android:id="@+id/btnInscription"
        android:layout_width="151dp"
        android:layout_height="50dp"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="14dp"
        android:cornerRadius="50dp"
        android:text="Inscription"
        app:backgroundTint="@color/rose"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        tools:layout_editor_absoluteY="208dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/numTel"
        android:layout_width="310dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Numéro de téléphone"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/btnConnexion"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/mdp"
        android:layout_width="310dp"
        android:layout_height="51dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:ems="10"
        android:hint="Mot de passe"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/numTel"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnInscrit"
        android:layout_width="204dp"
        android:layout_height="59dp"
        android:cornerRadius="50dp"
        android:text="Se connecter"
        app:backgroundTint="@color/rose"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/mdpOublie"
        app:layout_constraintVertical_bias="0.488" />

    <TextView
        android:id="@+id/mdpOublie"
        android:layout_width="228dp"
        android:layout_height="34dp"
        android:layout_marginTop="48dp"
        android:gravity="right"
        android:text="Mot de passe oublié"
        android:textColor="@color/rouge"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/mdp"
        app:layout_constraintTop_toBottomOf="@+id/mdp" />


</androidx.constraintlayout.widget.ConstraintLayout>