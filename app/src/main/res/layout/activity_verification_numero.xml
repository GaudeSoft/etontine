<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fc0662"
    tools:context=".VerificationNumero">

    <TextView
        android:id="@+id/textView"
        android:layout_width="291dp"
        android:layout_height="51dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="Vérification"
        android:textColor="@color/white"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="356dp"
        android:layout_height="94dp"
        android:gravity="center"
        android:text="Nous avons envoyé un code de vérification sur votre numéro"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/textVeri1"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginStart="27dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bord"
        android:gravity="center"
        android:inputType="number"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/textVeri2"
        android:layout_width="72dp"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bord"
        android:translationX="-20dp"
        android:gravity="center"
        android:inputType="number"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textVer3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textVeri1"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/textVer3"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:translationX="15dp"
        android:gravity="center"
        android:inputType="number"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@drawable/bord"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/textView7"
        android:layout_width="67dp"
        android:layout_height="65dp"
        android:layout_marginTop="36dp"
        android:gravity="center"
        android:inputType="number"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/bord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="296dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:gravity="center|top"
        android:text="J'ai pas reçu de code"
        android:textColor="@color/white"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVer3" />

    <TextView
        android:id="@+id/renvoyer"
        android:layout_width="149dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:text="RENVOYEZ"
        android:gravity="center|top"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:clickable="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/button2"
        android:layout_width="210dp"
        android:layout_height="61dp"
        android:layout_marginTop="136dp"
        android:text="valider"
        android:textSize="30dp"
        android:gravity="center"
        android:cornerRadius="90dp"
        android:background="@color/rosesombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/renvoyer" />



</androidx.constraintlayout.widget.ConstraintLayout>